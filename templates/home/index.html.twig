            </div>
          </div>
          <div class="el">
            <h1>Recently added</h1>
            <div class="main">
            {% set car = cars[0] %}
              <div class="rd">
                <div class="sub">
                  <img src="{{car.picture.url}}" alt="" srcset="">
                  <h1>{{car.marque}} {{car.name}}, {{car.annee}}</h1>
                  <h2>£ {{car.prix}}</h2>
                  <div class="more">
                    <a href="{{path('details', {'id': car.id})}}">View details</a>
                    <a href="{{path('checkout', {'id': car.id})}}"class="btn btn-warning">Buy now</a>
                  </div>
                </div>
              </div>
