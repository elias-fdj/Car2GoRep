    <div class="products" style="margin-bottom: 90px;">
      <div class="container" >
                  <h1 style="font-size:3.6vw;" >Find a car that suits you</h1>    
                  <div class="search-container">
                    <form action="">
                    <!--<div><button type="submit"><i class="fa fa-search"></i></button></div> -->
                      <input type="text" placeholder=" Eg. Mercedes Benz" name="search" class="search">     
                    </form>
                  </div>
          <div class="col-md-12">
            <div class="filters-content">
                <div class="row grid">
                {% for car in cars %}
                    <div class="col-lg-4 col-md-4 all des">
                      <div class="product-item">
                        <a style="margin-left:15px; "><img src="{{car.picture.url}}" style="margin-top:20px;" alt=""></a>
                        <div class="down-content" style="margin-left:15px;">
                          <h4 id="titre">{{car.marque}}, {{car.name}}</h4>
                          <h6 id="price">Â£ {{car.prix}}</h6>
                          <div id="buy"> 
                            <a href="{{path('details', {'id': car.id})}}" style="color:black; " class="details"><u>View details</u></a>
                            <a class="btn btn-warning"  href="{{path('checkout', {'id': car.id})}}" style="margin-left:40px;">Buy Now</a>
                          </div>
                         
                        </div>
                      </div>
                    </div>
                {% endfor %}       
                </div>
            </div>
          </div>
          <div class="col-md-12">
            {% do cars.setPageRange(2) %}
            {{ knp_pagination_render(cars, 'shared/pagination.html.twig') }}
          </div>
      </div>
    </div>



    <!-- Bootstrap core JavaScript -->
